#!/bin/bash
SYS=`sensors|grep SYSTIN|cut -f 8 -d " " | sed s/\+// | sed s/째C//`
CPU=`sensors|grep CPUTIN|cut -f 8 -d " " | sed s/\+// | sed s/째C//`

GPU=`nvidia-smi -a -q|grep Gpu|grep C|cut -f 2 -d ":" |sed s/\ //|sed s/\ C//`
FS="%-12s%.1f째C\t%.1f째F\n"


printf "$FS" "CPU" "$CPU" `units "tempC($CPU)" tempF -t`
printf "$FS" "GPU" "$GPU" `units "tempC($GPU)" tempF -t`
printf "$FS" "SYS" "$SYS" `units "tempC($SYS)" tempF -t`